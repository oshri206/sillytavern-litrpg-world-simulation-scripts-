{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NPCMemory",
  "type": "object",
  "required": ["id", "npc", "summary", "sentiment"],
  "properties": {
    "id": { "type": "string" },
    "npc": { "type": "string" },
    "summary": { "type": "string" },
    "sentiment": { "type": "number", "minimum": -1, "maximum": 1 },
    "createdAt": { "type": "string" }
  }
}
